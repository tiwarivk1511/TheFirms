<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ratings.RatingActivity4">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/reviewDetailCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/review_img_4"
                    android:scaleType="fitXY"
                    />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="15dp"
                android:backgroundTint="#D9D9D9"
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/reviewDetailCardView">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/reviewDetailForm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#D9D9D9"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <LinearLayout
                            android:layout_width="374dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/poppins_bold"
                                android:text="REVIEWER DETAILS"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Verify and submit your Detail"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/userNametextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:paddingStart="10dp"
                                android:text="Your Full Name"
                                android:textSize="15sp" />

                            <EditText
                                android:id="@+id/userNameEditTxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/box_bg"
                                android:hint="Enter you full name"
                                android:padding="10dp" />


                            <TextView
                                android:id="@+id/CompanyTxtView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="Company Name"
                                android:textSize="15sp" />

                            <EditText
                                android:id="@+id/CompanyEditTxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/box_bg"
                                android:hint="Enter your company's name"
                                android:padding="10dp" />

                            <TextView
                                android:id="@+id/positionTxtView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:paddingStart="10dp"
                                android:text="What is your postion in your company?"
                                android:textSize="15sp" />

                            <EditText
                                android:id="@+id/positionEditTxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/box_bg"
                                android:hint="Enter your job position"
                                android:padding="10dp" />

                            <TextView
                                android:id="@+id/locationTxtView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:paddingStart="10dp"
                                android:text="Your Location"
                                android:textSize="15sp" />

                            <AutoCompleteTextView
                                android:id="@+id/locationAutoCompletedTxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/box_bg"
                                android:drawableStart="@drawable/location_icon"
                                android:drawableEnd="@drawable/select_icon"
                                android:drawablePadding="8dp"
                                android:hint="Select your country"
                                android:padding="10dp" />

                            <TextView
                                android:id="@+id/websiteLinkTxtView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:paddingStart="10dp"
                                android:text="Your Website"
                                android:textSize="15sp" />

                            <EditText
                                android:id="@+id/websiteLinkEditTxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/box_bg"
                                android:hint="Enter url of your companyâ€™s website"
                                android:inputType="textUri"
                                android:padding="10dp" />

                            <TextView
                                android:id="@+id/businessEmailTxtView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:paddingStart="10dp"
                                android:text="Your E-mail address"
                                android:textSize="15sp" />

                            <EditText
                                android:id="@+id/businessEditTxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/box_bg"
                                android:hint="Enter your email address"
                                android:inputType="textEmailAddress"
                                android:padding="10dp" />

                            <TextView
                                android:id="@+id/linkedInTxtView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:paddingStart="10dp"
                                android:text="Linkedin Profile"
                                android:textSize="15sp" />

                            <EditText
                                android:id="@+id/linkedInEditTxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/box_bg"
                                android:hint="Enter your linkedin profile url"
                                android:inputType="textUri"
                                android:padding="10dp" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/verifySubmitBtn"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="15dp"
                        android:backgroundTint="@color/black"
                        android:text="Verify And Submit"
                        app:cornerRadius="10dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/reviewDetailForm" />


                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>